/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.btn-list {
  width: 80%;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
}

.btn-list button {
  margin-top: 20px;
  flex: 0 0 500rpx;
}